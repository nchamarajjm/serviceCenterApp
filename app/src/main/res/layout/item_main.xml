<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="0dp">

    <TextView
        android:id="@+id/txt_vehicle_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Vehicle Number"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_vehicle_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle Brand"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_odo_meter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odo Meter"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_next_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Service"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/service_records_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- This will be dynamically populated with service records -->
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/primary_green"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
